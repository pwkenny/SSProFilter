# ssprofilter Makefile

# You'll need to edit the location of the toolkits 
OEDIR = /home/peter/openeye/openeye/toolkits/

INCDIR = $(OEDIR)/include
LIBDIR = $(OEDIR)/lib

INCS = -I$(INCDIR)
LIBS = -L$(LIBDIR) \
	-loebio \
	-loechem \
	-loesystem \
	-loeplatform \
	-lz \
	 -lm -lpthread 


#  You'll almost certainly need to edit this as well
CXX = /usr/lib64/ccache/g++

RM=rm -f
CXXFLAGS =  -W -Wall -D_LARGEFILE_SOURCE -D_FILE_OFFSET_BITS=64 -pthread  -O3 -fomit-frame-pointer -ffast-math 
LFLAGS =  -s


PROGRAMS = \
	ssprofilter 

.SUFFIXES:	.cpp
.SUFFIXES:	.o
.cpp.o:
		$(CXX) $(CXXFLAGS) $(INCS) -c $<


all:		$(PROGRAMS)

clean:	
		$(RM) $(PROGRAMS)
		$(RM) ii_files core a.out
		$(RM) *.o
ssprofilter.1.0.o: ssprofilter.1.0.cpp
ssprofilter:	ssprofilter.1.0.o
		$(CXX) ssprofilter.1.0.o $(LFLAGS) -o $@ $(LIBS)
